<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="upload_file" inherit_id="website.assets_frontend" name="Stock">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/manufacturer_certificate/static/src/css/website_file_upload.css'/>
				<script type="text/javascript" src="/manufacturer_certificate/static/src/js/website_file_upload.js"></script>
			</xpath>
		</template>

		<template id="manufacturer_certificate.certificate" name="Manufacturer register">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


					<div class="form-group field-oib_num">
						<label for="oib_num" class="control-label">OIB</label>
						<input type="text" name="oib_num" t-att-value="oib_num" id="oib_num" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street">
						<label for="street" class="control-label">Ulica</label>
						<input type="text" name="street" t-att-value="street" id="street" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street_number">
						<label for="street_number" class="control-label">Kućni broj</label>
						<input type="text" name="street_number" t-att-value="street_number" id="street_number" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-city">
						<label for="city" class="control-label">Mjesto</label>
						<input type="text" name="city" t-att-value="city" id="city" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-zip">
						<label for="zip" class="control-label">Poštanski broj</label>
						<input type="number" name="zip" t-att-value="zip" id="zip" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>


					<p class="alert alert-danger" t-if="error">
						<t t-esc="error"/>
					</p>
					<p class="alert alert-success" t-if="message">
						<t t-esc="message"/>
					</p>

					<input type="hidden" name="redirect" t-att-value="redirect"/>
					<div class="clearfix oe_login_buttons">
						<button type="submit" class="btn btn-primary">Potvrdi</button>
					</div>
				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.user_certificate_tree_view" name="Manufacturer certificates">
			<t t-call="website.layout">
				<form class="oe_form_view" role="form" t-attf-action="/manufacturer/certificate_send_address{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="container">
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">VIN</th>
										<th scope="col">Ime</th>
										<th scope="col">Prezime</th>
										<th scope="col">Vozilo</th>
										<th scope="col">Status</th>
										<th scope="col">Dodaj datoteku</th>
									</tr>
								</thead>
								<tbody>
									<t t-set="i" t-value="1"/>
									<t t-foreach="certificates" t-as="cert">
										<tr>
											<th scope="row" t-esc="i"/>
											<td t-if="cert['vin_number']"><t t-esc ="cert['vin_number']"/></td>
											<td t-if="not cert['vin_number']"> </td>
											<td t-if="cert['first_name']"><t t-esc ="cert['first_name']"/></td>
											<td t-if="not cert['first_name']"> </td>
											<td t-if="cert['last_name']"><t t-esc ="cert['last_name']"/></td>
											<td t-if="not cert['last_name']"> </td>
											<td t-if="cert['vehicle_id']"><t t-esc ="cert['vehicle_id']"/></td>
											<td t-if="not cert['vehicle_id']"> </td>
											<td t-if="cert['state']"><t t-esc ="cert['state']"/></td>
											<td t-if="not cert['state']"> </td>
											<td><button type="submit" class="btn btn-primary">Dodaj</button></td>
										</tr>
										<t t-set="i" t-value="i+1"/>
									</t>
								</tbody>
							</table>
						</div>

						<input type="hidden" name="redirect" t-att-value="redirect"/>
						<div class="clearfix oe_login_buttons">
							<button type="submit" class="btn btn-primary">Kreiraj novi zahtjev</button>
						</div>
					</div>
				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.certificate_send_address" name="Manufacturer register">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_new{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

					<label for="exampleInputFile">Adresa za slanje</label>

					<div class="form-group field-street_send">
						<label for="street_send" class="control-label">Ulica</label>
						<input type="text" name="street_send" t-att-value="send_address['street']" id="street_send" class="form-control" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street_number">
						<label for="street_number" class="control-label">Kućni broj</label>
						<input type="text" name="street_number" t-att-value="send_address['street_number']" id="street_number" class="form-control" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-zip_send">
						<label for="zip_send" class="control-label">Poštanski broj</label>
						<input type="text" name="zip_send" t-att-value="send_address['zip']" id="zip_send" class="form-control"  autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-city_send">
						<label for="city_send" class="control-label">Mjesto</label>
						<input type="text" name="city_send" t-att-value="send_address['city']" id="city_send" class="form-control"  autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-personal_pickup">
						<label for="personal_pickup" class="control-label">Preuzimanje u poslovnici</label>
						<input type="checkbox" class="control-label" name="personal_pickup" id="personal_pickup" value="1"/>
					</div>


					<p class="alert alert-danger" t-if="error">
						<t t-esc="error"/>
					</p>
					<p class="alert alert-success" t-if="message">
						<t t-esc="message"/>
					</p>

					<input type="hidden" name="redirect" t-att-value="redirect"/>
					<div class="clearfix oe_login_buttons">
						<button type="submit" class="btn btn-primary">Potvrdi</button>
					</div>
				</form>
			</t>
		</template>


