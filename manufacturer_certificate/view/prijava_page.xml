<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<template id="upload_file_js" inherit_id="website.assets_frontend" name="Certificate">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/manufacturer_certificate/static/src/css/website_file_upload.css'/>
				<script type="text/javascript" src="/manufacturer_certificate/static/src/js/website_file_uploads.js"></script>
			</xpath>
		</template>

		<template id="manufacturer_certificate.certificate" name="Manufacturer register">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate{{ '?debug' if debug else '' }}" method="post" >
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


					<div class="form-group field-oib_num">
						<label for="oib_num" class="control-label">OIB</label>
						<input type="text" name="oib_num" t-att-value="oib_num" id="oib_num" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street">
						<label for="street" class="control-label">Ulica</label>
						<input type="text" name="street" t-att-value="street" id="street" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street_number">
						<label for="street_number" class="control-label">Kućni broj</label>
						<input type="text" name="street_number" t-att-value="street_number" id="street_number" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-city">
						<label for="city" class="control-label">Mjesto</label>
						<input type="text" name="city" t-att-value="city" id="city" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-zip">
						<label for="zip" class="control-label">Poštanski broj</label>
						<input type="number" name="zip" t-att-value="zip" id="zip" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					</div>


					<p class="alert alert-danger" t-if="error">
						<t t-esc="error"/>
					</p>
					<p class="alert alert-success" t-if="message">
						<t t-esc="message"/>
					</p>

					<input type="hidden" name="redirect" t-att-value="redirect"/>
					<div class="clearfix oe_login_buttons">
						<button type="submit" class="btn btn-primary">Potvrdi</button>
					</div>
				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.certificate_message_cancel" name="Manufacturer register">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_message_cancel{{ '?debug' if debug else '' }}" method="post">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="form-group">
						<p>Problem sa izradom vašeg certifikata.</p>
						<p>Za dodatno objašnjenje provjerite mail, ako mail nije u ulaznoj pošti provjerite spam.</p>
					</div>

				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.certificate_message_vin" name="Manufacturer register">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_message_vin{{ '?debug' if debug else '' }}" method="post" >
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="form-group">
						<p>Vaš certifikat je u pripremi.</p>
						<p>Za dodatno objašnjenje provjerite mail, ako mail nije u ulaznoj pošti provjerite spam.</p>
					</div>
				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.user_certificate_tree_view" name="Manufacturer certificates">
			<t t-call="website.layout">
				<form class="oe_form_view" role="form" t-attf-action="/manufacturer/certificate_send_address{{ '?debug' if debug else '' }}" method="post">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="container">
						<center><h2>Vaši zahtjevi za izdavanjem potvrde proizvođača</h2></center>
						<br> </br>
						<div class="table-responsive">
							<table class="table table-hover">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">VIN</th>
										<th scope="col">Ime</th>
										<th scope="col">Prezime</th>
										<th scope="col">Vozilo</th>
										<th scope="col">Status</th>
										<!--<th scope="col">Dodaj datoteku</th>-->
									</tr>
								</thead>
								<tbody>
									<t t-set="i" t-value="1"/>
									<t t-foreach="certificates" t-as="cert">
										<tr>
											<th scope="row" t-esc="i"/>
											<td t-if="cert['vin_number']"><t t-esc ="cert['vin_number']"/></td>
											<td t-if="not cert['vin_number']"> </td>
											<td t-if="cert['first_name']"><t t-esc ="cert['first_name']"/></td>
											<td t-if="not cert['first_name']"> </td>
											<td t-if="cert['last_name']"><t t-esc ="cert['last_name']"/></td>
											<td t-if="not cert['last_name']"> </td>
											<td t-if="cert['vehicle_id']"><t t-esc ="cert['vehicle_id']"/></td>
											<td t-if="not cert['vehicle_id']"> </td>
											<td t-if="cert['state']"><t t-esc ="cert['state']"/></td>
											<td t-if="not cert['state']"> </td>
											<!--<td><button type="submit" class="btn btn-primary">Dodaj</button></td>-->
										</tr>
										<t t-set="i" t-value="i+1"/>
									</t>
								</tbody>
							</table>
						</div>

						<input type="hidden" name="redirect" t-att-value="redirect"/>
						<div class="clearfix oe_login_buttons">
							<button type="submit" class="btn btn-primary">Kreiraj novi zahtjev</button>
						</div>
					</div>
				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.certificate_send_address" name="Manufacturer certificate address">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_new{{ '?debug' if debug else '' }}" method="post">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

					<label for="exampleInputFile">Adresa za slanje</label>

					<div class="form-group field-street_send">
						<label for="street_send" class="control-label">Ulica</label>
						<input type="text" name="street_send" t-att-value="send_address['street']" id="street_send" class="form-control" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-street_number">
						<label for="street_number" class="control-label">Kućni broj</label>
						<input type="text" name="street_number" t-att-value="send_address['street_number']" id="street_number" class="form-control" autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-zip_send">
						<label for="zip_send" class="control-label">Poštanski broj</label>
						<input type="text" name="zip_send" t-att-value="send_address['zip']" id="zip_send" class="form-control"  autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-city_send">
						<label for="city_send" class="control-label">Mjesto</label>
						<input type="text" name="city_send" t-att-value="send_address['city']" id="city_send" class="form-control"  autofocus="autofocus" autocapitalize="off"/>
					</div>

					<div class="form-group field-personal_pickup">
						<label for="personal_pickup" class="control-label">Preuzimanje u poslovnici</label>
						<input type="checkbox" class="control-label" name="personal_pickup" id="personal_pickup" value="1"/>
					</div>


					<p class="alert alert-danger" t-if="error">
						<t t-esc="error"/>
					</p>
					<p class="alert alert-success" t-if="message">
						<t t-esc="message"/>
					</p>

					<input type="hidden" name="redirect" t-att-value="redirect"/>
					<div class="clearfix oe_login_buttons">
						<button type="submit" class="btn btn-primary">Potvrdi</button>
					</div>
				</form>
			</t>
		</template>


		<template id="manufacturer_certificate.user_new_certificate" name="Manufacturer new certificates">
			<t t-call="web.login_layout">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_create{{ '?debug' if debug else '' }}" method="post">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<div class="container">

						<div class="form-group field-MC_id">
							<!--<label for="MC_id" class="control-label">Mc id</label>-->
							<input type="hidden" name="MC_id" t-att-value="mc_id" id="MC_id" class="form-control"  autofocus="autofocus" autocapitalize="off"/>
						</div>

						<div class="form-group field-vin">
							<label for="vin" class="control-label">VIN</label>
							<input type="text" name="vin" t-att-value="vin" id="vin" size="17" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
						</div>

						<div class="form-group field-motor_model">
							<label for="motor_model" class="control-label">Model</label>
							<input type="text" name="motor_model" t-att-value="motor_model" id="motor_model" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
						</div>


						<div class="form-group field-model_year">
							<label for="model_year">Godina modela</label>
							<select class="form-control" name="model_year" required="required">
								<option value="">Godina modela...</option>
								<t t-foreach="years" t-as="year">
									<option t-value="year"><t t-esc="year"/></option>
								</t>
								<!--<t t-if="not valid">-->
								<!--<div class="alert alert-danger">-->
								<!--<strong>Wraning!</strong>-->
								<!--You can't buy product with freight &amp; no freight together.-->
								<!--</div>-->
								<!--</t>-->
							</select>
						</div>

						<div class="form-group field-origin">
							<label for="origin">Podrijetlo</label>
							<select class="form-control" name="origin" required="required">
								<option value="">Podrijetlo...</option>
								<t t-foreach="countrys" t-as="country">
									<option t-value="country.id"><t t-esc="country.name"/></option>
								</t>
							</select>
						</div>

						<input type="hidden" name="redirect" t-att-value="redirect"/>
						<div class="clearfix oe_login_buttons">
							<button type="submit" class="btn btn-primary">Spremi</button>
						</div>
					</div>

				</form>
			</t>
		</template>

		<template id="manufacturer_certificate.certificate_final" name="Manufacturer certificate final">
				<form class="oe_login_form" role="form" t-attf-action="/manufacturer/certificate_final" method="post">
					<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
					<input type="hidden" name="MC_id" t-att-value="MC_id" id="MC_id" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
					<!--<label for="exampleInputFile">Uspješna predaja</label>-->

					<input type="hidden" name="redirect" t-att-value="redirect"/>
					<div class="clearfix oe_login_buttons">
						<button type="submit" class="btn btn-primary">Završi</button>
					</div>
				</form>
		</template>


		<template id="manufacturer_certificate.upload_documents" active="True" name="Upload documents">
			<!--<script type="text/javascript" src="/manufacturer_certificate/static/src/js/website_file_uploads.js"></script>-->
				<t t-call="website.layout">
					<div class="container oe_website_upload">
						<h3>Priloži dokumente</h3>
						<br><label>Kopija prometne dozvole vozila, račun ...</label></br>
						<div class="form-group">
							<div class="modal fade" id="file_upload_modal" role="dialog">
								<div class="modal-dialog">
									<div class="modal-content order-attachment-upload">
										<div class="modal-body">
											<button type="button" class="close attachment-close" data-dismiss="modal"><img src="/manufacturer_certificate/static/src/img/icon-cross.png"/></button>
											<form id="file_upload_form" action="/manufacturer/certificate_upload_documents" method="post" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data">
												<input type="hidden" name="MC_id" t-att-value="MC_id" id="MC_id" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
												<input type="hidden" name="motor_model" t-att-value="motor_model" id="motor_model" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
												<input type="hidden" name="model_year" t-att-value="model_year" id="model_year" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
												<input type="hidden" name="vin" t-att-value="vin" id="vin" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
												<input type="hidden" name="origin" t-att-value="origin" id="origin" class="form-control" required="required" autofocus="autofocus" autocapitalize="off"/>
												<center><div class="upload-message">
													<strong> Odaberi Dokument Za Upload</strong>
												</div></center>
												<div class="clearfix"/>
												<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
												<div class="input-group col-md-offset-1 col-md-10">
													<input type="file" name="Upload-File" required="required" style="display:none;" />
													<div id="file-upload-name" tabindex="500"  class="form-control" >-----Odaberi Dokument Za Upload-----
													</div>
													<span class="input-group-btn">
														<a class="btn btn-primary file_browse_btn fa fa-folder-open-o">&#032;Pretraži...</a>
													</span>
												</div>
												<button type="submit" class="btn btn-primary col-md-offset-4 file_upload_btn fa fa-upload disabled" style="display:none;">&#032;Učitaj</button>
											</form>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-12 attachment">
								<div t-if="attachment_count &gt; 0"  style="font-size: 18px">Dokumenti:&#032;[<t t-esc="attachment_count"/> files]
									<a class="btn btn-info fa fa-paperclip view-attachment" t-if="attachment_objs">&#032;Pogledaj dokumente</a></div>
								<div class="attachment-history" t-if="attachment_objs" style="display:none;">
									<t t-set="i" t-value="1"/>
									<table class="table table-striped table-condensed">
										<thead>
											<tr>
												<th class="col-md-1">#</th>
												<th class="col-md-4">Naziv</th>
												<!--<th class="col-md-4">Att_id</th>-->
												<th class="col-md-1">Izbriši</th>
											</tr>
										</thead>
										<t t-foreach="attachment_objs" t-as="attachment">
											<tbody>
												<input type="hidden" t-att-value="attachment.id" name="attachment-id" id="attachment-id" class="attachment_id"/>
												<tr>
													<td><t t-esc="i"/></td>
													<td><t t-esc="attachment.name"/></td>
													<!--<td><t t-esc="attachment.id" /></td>-->
													<td><center><a class="attachment-remove" id="attachment-remove"><i class="fa fa-trash-o"></i></a></center></td>
												</tr>
											</tbody>
											<t t-set="i" t-value="i+1"/>
										</t>
									</table>
								</div>
								<input type="hidden" name="MC_id" t-att-value="MC_id" id="MC_id" class="form-control"/>
								<a class="btn btn-primary add-attachment fa fa-plus">&#032; Priloži dokumente</a>

							</div>
						</div>
					</div>
					<t t-if="attachment_count &gt; 0">
						<t t-call="manufacturer_certificate.certificate_final"> </t>
					</t>
				</t>
		</template>




