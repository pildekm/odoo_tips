<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_stock_qty_wizz_tree" model="ir.ui.view">
			<field name="name">sale.order.stock.quantity.tree</field>
			<field name="model">sale.order.stock.quantity.wizz</field>
			<field name="arch" type="xml">
				<tree>
					<!--<field name="product_id"/>-->
					<field name="product_name"/>
					<field name="default_code"/>
					<field name="last_default_code"/>
					<field name="new_default_code"/>
					<field name="quantity"/>
					<field name="location_name"/>
				</tree>
			</field>
		</record>

		<record id="sale_order_stock_qty_wizz_form" model="ir.ui.view">
			<field name="name">sale.order.stock.quantity.form</field>
			<field name="model">sale.order.stock.quantity.wizz</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="product_id"/>
						<field name="product_name"/>
						<field name="default_code"/>
						<field name="last_default_code"/>
						<field name="new_default_code"/>
						<field name="quantity"/>
						<field name="location_name"/>
						<field name="location_id"/>
					</group>
				</form>
			</field>
		</record>

		<act_window id="sale_order_stock_qty_action"
					name="On hand quantity"
					res_model="sale.order.stock.quantity.wizz"
					src_model="sale.order.line"
					view_mode="form"
					target="new"/>

    </data>
</odoo>