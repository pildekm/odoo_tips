<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="sale_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<field name="product_id" position="after">
					<!--<field name="sale_order_stock_qty_wizz"-->
						   <!--attrs="{'invisible':[('product_id', '=', False)]}"/>-->
					<field name="sale_order_stock_qty"
						   attrs="{'invisible':[('product_id', '=', False)]}"/>
					<!--widget="many2many_tags"-->
					<field name="dt_stock"/>
					<field name="tm_stock"/>
				</field>
				<xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
            		<field name="dt_stock"/>
					<field name="tm_stock"/>
        		</xpath>

			</field>
		</record>
		
		<record id="sale_order_stock_qty_tree" model="ir.ui.view">
			<field name="name">sale.order.stock.quantity.tree</field>
			<field name="model">sale.order.stock.quantity</field>
			<field name="arch" type="xml">
				<tree>
					<!--<field name="product_id"/>-->
					<field name="product_name"/>
					<field name="default_code"/>
					<field name="last_default_code"/>
					<field name="new_default_code"/>
					<field name="quantity"/>
					<field name="location_name"/>
				</tree>
			</field>
		</record>

		<record id="sale_order_stock_qty_form" model="ir.ui.view">
			<field name="name">sale.order.stock.quantity.form</field>
			<field name="model">sale.order.stock.quantity</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="product_id"/>
						<field name="product_name"/>
						<field name="default_code"/>
						<field name="last_default_code"/>
						<field name="new_default_code"/>
						<field name="quantity"/>
						<field name="location_name"/>
						<field name="location_id"/>
					</group>
				</form>
			</field>
		</record>
		

	</data>
</openerp>