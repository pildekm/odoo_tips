<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_checking_validation_view" model="ir.ui.view">
        <field name="name">stock.checking.validation.view.form</field>
        <field name="model">stock.checking.validation</field>
        <field name="arch" type="xml">
            <form string="Checking validation">
                <group>
                    <p>
                        You haven't set processed (<i>done</i>) quantities. Click <i>apply</i> and
                        Odoo will process all quantities to do.
                    </p>
                </group>
                <footer>
                    <button name="update" string="_Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>